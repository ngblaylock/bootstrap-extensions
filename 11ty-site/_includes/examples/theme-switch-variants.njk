<div class="card d-inline-flex flex-row overflow-hidden">
  <div class="p-4 d-flex">
    <!-- Default Behavior -->
    <input
      type="checkbox"
      aria-label="Switch Theme"
      class="theme-switch"
      data-bse-theme-switch
    />
  </div>

  <div class="p-4 d-flex bg-dark">
    <!-- Always on Dark Background -->
    <input
      type="checkbox"
      aria-label="Switch Theme"
      class="theme-switch theme-switch-light"
      data-bse-theme-switch
    />
  </div>

  <div class="p-4 d-flex bg-light">
    <!-- Always on Light Background -->
    <input
      type="checkbox"
      aria-label="Switch Theme"
      class="theme-switch theme-switch-dark"
      data-bse-theme-switch
    />
  </div>
</div>
